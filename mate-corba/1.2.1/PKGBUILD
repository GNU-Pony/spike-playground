pkgname=mate-corba
pkgver=1.2.1
pkgrel=1
pkgdesc='Thin/fast CORBA ORB'
arch=('i686' 'x86_64')
url='http://mate-desktop.org'
license=('GPL' 'LGPL')
depends=('libidl2>=0.8.11')
makedepends=('pkgconfig' 'automake-1.12')
options=('!emptydirs' '!libtool')
source=("https://github.com/mate-desktop/mate-corba/archive/mate-corba-$pkgver.tar.gz")
sha256sums=('496b5a3ddfd5ea748aaa8dd06556aab9f63c7100c1848d2c9cfeb6bc8ae8030d')


build() {
    cd "$srcdir/mate-corba-mate-corba-$pkgver"
    AUTOMAKE=automake-1.12 AUTOCONF=autoconf ./autogen.sh --prefix=/usr --disable-static || return 1
    make || return 1
}

package() {
    cd "$srcdir/mate-corba-mate-corba-$pkgver"
    make DESTDIR="$pkgdir" install
}

