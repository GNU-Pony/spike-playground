pkgname=mate-doc-utils
pkgver=1.6.0
pkgrel=1
pkgdesc="Common files for MATE packages"
arch=('i686' 'x86_64')
url="http://mate-desktop.org"
license=('GPL' 'LGPL')
depends=('libxslt' 'python2' 'docbook-xml' 'rarian')
makedepends=('mate-common')
options=('!emptydirs' '!libtool')
source=(https://github.com/mate-desktop/mate-doc-utils/archive/mate-doc-utils-1.6.0.tar.gz)
sha256sums=(fa49408cb80bbe15f9602f11d676043ae100ca04f5ccfaa7664c22d8a35971b1)

build() {
    cd "${srcdir}/mate-doc-utils-mate-doc-utils-1.6.0"
    AUTOCONF=autoconf AUTOMAKE=automake PYTHON=/usr/bin/python2 ./autogen.sh --prefix=/usr --sysconfdir=/etc --mandir=/usr/share/man --localstatedir=/var --disable-scrollkeeper || return 1
    make || return 1
}

package() {
    cd "${srcdir}/mate-doc-utils-mate-doc-utils-1.6.0"
    make DESTDIR="${pkgdir}" install || return 1
    
    # files with conflicts with gnome-doc-utils
    rm -rf "${pkgdir}/usr/share/xml/mallard/"
    rm "${pkgdir}/usr/share/pkgconfig/xml2po.pc"
    rm -rf "${pkgdir}/usr/share/man/"
    rm -rf "${pkgdir}/usr/lib/"
    rm "${pkgdir}/usr/bin/xml2po"
}

