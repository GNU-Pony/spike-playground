pkgname=mate-common
pkgver=1.5.0
pkgrel=1
pkgdesc="Common files for MATE packages"
arch=('i686' 'x86_64')
url="http://mate-desktop.org"
license=('GPL')
depends=('glib2' 'python2')
makedepends=('autoconf>=2.53' 'automake>=1.9' 'libtool>=1.4.3' 'gettext>=0.10.40' 'glib2>=2.2.0' 'intltool>=0.25' 'pkg-config>=0.14.0')
options=('!libtool')
source=(https://github.com/mate-desktop/mate-common/archive/mate-common-1.5.0.tar.gz)
sha256sums=(436561014e1ae69eb126db8fa4de24e38c4ee37dd0f163a45c73b81b816496f2)

build() {
    cd "${srcdir}/mate-common-mate-common-1.5.0"
    AUTOCONF=autoconf AUTOMAKE=automake ./autogen.sh --prefix=/usr || return 1
    make || return 1
}

package() {
    cd "${srcdir}/mate-common-mate-common-1.5.0"
    make DESTDIR="${pkgdir}" install || return 1
}

