pkgname=mate-common
pkgver=1.5.2
pkgrel=1
pkgdesc="Common files for MATE packages"
arch=('i686' 'x86_64')
url="http://mate-desktop.org"
license=('GPL')
depends=('python2' 'autoconf>=2.53' 'automake>=1.9' 'libtool>=1.4.3' 'gettext>=0.10.40' 'glib2>=2.2.0' 'intltool>=0.25' 'pkg-config>=0.14.0' 'which')
makedepends=('autoconf>=2.53' 'automake>=1.9' 'libtool>=1.4.3' 'gettext>=0.10.40' 'glib2>=2.2.0' 'intltool>=0.25' 'pkg-config>=0.14.0')
options=('!libtool')
source=(https://github.com/mate-desktop/mate-common/archive/mate-common-1.5.2.tar.gz)
sha256sums=(bfe787f553533ae5eff5bcb7df2170093c9af99dabbec480610c47b5725029f1)

build() {
    cd "${srcdir}/mate-common-mate-common-1.5.2"
    AUTOCONF=autoconf AUTOMAKE=automake ./autogen.sh --prefix=/usr || return 1
    make || return 1
}

package() {
    cd "${srcdir}/mate-common-mate-common-1.5.2"
    make DESTDIR="${pkgdir}" install || return 1
    ln -sf "mate-autogen" "${pkgdir}/usr/bin/mate-autogen.sh"
}

